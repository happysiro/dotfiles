resources:
  - type: command
    script: brew update
  <%- homebrew_package_names.each do |homebrew_package_name| -%>
  - type: homebrew_package
    name: <%= homebrew_package_name %>
  <%- end -%>
  <%- homebrew_tap_names.each do |homebrew_tap_name| -%>
  - type: homebrew_tap
    name: <%= homebrew_tap_name %>
  <%- end -%>
  <%- atom_package_names.each do |atom_package_name| -%>
  - type: atom_package
    name: <%= atom_package_name %>
  <%- end -%>
  - type: rbenv_ruby
    version: 2.2.2
    global: true
  - type: defaults
    domain: com.apple.dock
    key: autohide
    value: 1
    notify:
      - restart_dock
  - type: defaults
    domain: com.apple.dock
    key: persistent-apps
    value: []
    notify:
      - restart_dock
  - type: defaults
    domain: com.apple.dock
    key: persistent-others
    value: []
    notify:
      - restart_dock
  - type: defaults
    domain: com.apple.screencapture
    key: type
    value: png
  - type: defaults
    domain: com.apple.screencapture
    key: location
    value: ~/Downloads
    notify:
      - restart_system_ui_server
  - type: defaults
    key: com.apple.sound.beep.feedback
    value: 1
  - type: defaults
    domain: com.apple.finder
    key: AppleShowAllFiles
    value: 1
    notify:
      - restart_finder
  - type: defaults
    key: AppleKeyboardUIMode
    value: 3 # Allow full keyboard access
  - type: git
    repository: https://github.com/sue445/dotfiles.git
    path: /Users/<%= ENV["USER"] %>/dotfiles
    status: updated
handlers:
  - id: restart_dock
    type: command
    script: killall Dock
  - id: restart_finder
    type: command
    script: killall Finder
  - id: restart_system_ui_server
    type: command
    script: killall SystemUIServer

